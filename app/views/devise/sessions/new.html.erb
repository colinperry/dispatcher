<div class="sign_in_form_container">
  <div class="sign_in_form">

    <h2>Please log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, placeholder: "Email address", class: "form_field" %>
      </div>

      <br>

      <div class="field">
        <%= f.password_field :password, placeholder: "Password", class: "form_field" %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit "Log in", class: "submit_button" %>
      </div>

    <% end %>

  </div>
</div>
